<h1>Account Management</h1>

<% if (message) { %>
  <div class="flash"><%= message %></div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="errors">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>


<% if (accountData) { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <p>You're logged in.</p>

  <!-- Update account link (always visible) -->
  <p><a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a></p>

  <!-- Only show inventory section if Employee or Admin -->
  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Manage Inventory</a></p>
  <% } %>
<% } %>
