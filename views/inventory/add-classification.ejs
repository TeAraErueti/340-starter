<main>
  <h1>Add New Classification</h1>

  <% if (message && message.length > 0) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name (no spaces or special characters):</label>
    <input type="text" id="classification_name" name="classification_name" pattern="^[a-zA-Z0-9]+$" required>
    
    <button type="submit">Add Classification</button>
  </form>

  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</main>
